{
  "compilerOptions": {
    "lib": ["es2021", "es5", "es6", "dom", "dom.iterable"],
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "layouts/*": ["src/layouts/*"],
      "utils/*": ["src/utils/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "incremental": true,
    "typeRoots": ["./utils/typings", "./node_modules/@types"]
  },
}
